<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />
    -->

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imageView1"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/b_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
android:textColor="#EE7621"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="小娇娇" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/b_name"
        android:layout_marginTop="15dp"
        android:text="美吗" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:text="美容师"
          android:textSize="12dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="14dp"
        android:textSize="12dp"
        android:text="阿海美发设计"
        android:textColor="@color/gray" />

   
        <com.roamer.ui.view.SquareCenterImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_parise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_comment"
        android:layout_toRightOf="@+id/commentCount"
        android:src="@drawable/good_work_items" />

    <TextView
        android:id="@+id/commentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pariseCount"
        android:layout_alignBottom="@+id/pariseCount"
        android:layout_margin="4sp"
        android:layout_toLeftOf="@+id/position"
        android:text="0" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toLeftOf="@+id/commentCount"
        android:src="@drawable/pl_work_items" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/belong"
        android:layout_alignBottom="@+id/belong"
        android:layout_alignRight="@+id/pariseCount"
        android:text="40分钟前"
          android:textSize="12dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/pariseCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_comment"
        android:layout_margin="4sp"
        android:layout_toRightOf="@+id/iv_parise"
        android:text="3" />

</RelativeLayout>