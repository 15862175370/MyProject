<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.atgem.googleplay.UserShowActivity" >

    <EditText
        android:id="@+id/et_us1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top"
        android:hint="个人秀....."
        android:inputType="textMultiLine" >
    </EditText>

    <ImageView
        android:id="@+id/iv_showphoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/et_us1"
        android:layout_below="@+id/et_us1"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_addpic_unfocused" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_us1"
        android:layout_alignTop="@+id/iv_showphoto"
        android:text="2015-11-06 11:08"
        android:textSize="11sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_showtime"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/tv_time"
        android:layout_alignTop="@+id/tv_time"
        android:src="@drawable/time" />

    <ImageView
        android:id="@+id/iv_showtimered"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tv_time"
        android:layout_toLeftOf="@+id/tv_time"
        android:layout_marginLeft="3dp"
        android:src="@drawable/time_red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_showtimered"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:visibility="invisible"
        android:text="send" />

</RelativeLayout>