<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:fillViewport="true" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="886dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/background" />
        <TextView
            android:id="@+id/tv_barbername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_icon"
            android:layout_centerHorizontal="true"
            android:text="KEN"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/tv_yuyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_biaozhi"
            android:layout_alignLeft="@+id/image_guanzhu"
            android:layout_marginLeft="3dp"
            android:text="预约过0次" />
        <ImageView
            android:id="@+id/image_guanzhu"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_above="@+id/image_biaozhi"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image_icon"
            android:src="@drawable/guanzhu" />
        <Button
            android:id="@+id/bt_zhiwei"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tv_yuyue"
            android:layout_alignRight="@+id/tv_barbername"
            android:layout_alignTop="@+id/image_biaozhi"
            android:layout_marginRight="37dp"
            android:background="#FFA07A"
            android:text="总监"
            android:textColor="#fffafa"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/image_biaozhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_barbername"
            android:layout_toRightOf="@+id/bt_zhiwei"
            android:src="@drawable/bespeak_date_icon" />
        <com.atgem.googleplay.RoundedCornerImageView
            android:id="@+id/image_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/barberheadicon" />
        <ImageView
            android:id="@+id/image_renqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_zhiwei"
            android:layout_marginLeft="20dp"
            android:src="@drawable/renqizhishu" />
        <ImageView
            android:id="@+id/image_fuwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_renqi"
            android:layout_toRightOf="@+id/image_renqi"
            android:src="@drawable/fuwuzhishu" />

        <ImageView
            android:id="@+id/image_zuanye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_renqi"
            android:layout_toRightOf="@+id/image_fuwu"
            android:src="@drawable/zuanyezhishu" />
        <TextView
            android:id="@+id/tv_zhishu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_renqi"
            android:layout_marginBottom="38dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/bt_zhiwei"
            android:text="1.0" />
        <TextView
            android:id="@+id/tv_zhishu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_zhishu1"
            android:layout_alignBottom="@+id/tv_zhishu1"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:paddingRight="35dp"
            android:text="9.0" />
        <TextView
            android:id="@+id/tv_zhishu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_zhishu2"
            android:layout_alignRight="@+id/image_guanzhu"
            android:layout_alignTop="@+id/tv_zhishu2"
            android:layout_marginRight="20dp"
            android:text="8.7" />

        
        
        <RelativeLayout
            android:id="@+id/state1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/image_renqi"
            android:layout_marginTop="20dp"
            android:background="#DDDDDD"
            android:orientation="horizontal" >
             <ImageView
             android:id="@+id/image_shop"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="20dp"
             android:src="@drawable/shop" />
            <TextView
                android:id="@+id/tv_dianming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/image_shop"
                android:text="锐邦形象"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/image_toright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_dianming"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/toright" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/state2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/state1"
            android:background="#DDDDDD"
            android:orientation="horizontal" >
             <ImageView
             android:id="@+id/image_pen"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="20dp"
             android:src="@drawable/pen" />
            <TextView
                android:id="@+id/tv_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/image_pen"
                android:text="0位顾客评价"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/image_toright2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_pingjia"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/toright" />
        </RelativeLayout>
        
         <RelativeLayout
             android:id="@+id/state3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/state2"
             android:layout_marginTop="10dp"
             android:background="#DDDDDD"
             android:orientation="horizontal" >

             <TextView
                 android:id="@+id/tv_fuwuxianmu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="20dp"
                 android:textSize="20dp"
                 android:text="服务项目" />

             <TextView
                 android:id="@+id/tv_mendianjia"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@+id/tv_fuwuxianmu"
                 android:layout_centerHorizontal="true"
                 android:text="门店价" />

             <ListView
                 android:id="@+id/listView1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_below="@+id/tv_fuwuxianmu"
                 android:layout_marginTop="10dp" >
             </ListView>
         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/state4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/state3"
             android:layout_marginTop="10dp"
             android:background="#DDDDDD"
             android:orientation="horizontal" >

             <TextView
                 android:id="@+id/tv_zuopin"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:text="沙龙作品"
                 android:textSize="20dp" />

             <TextView
                 android:id="@+id/tv_chakan"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBaseline="@+id/tv_zuopin"
                 android:layout_alignBottom="@+id/tv_zuopin"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"
                 android:text="查看更多" />
             <GridView
                 android:id="@+id/gv"
                 android:layout_width="match_parent"
                 android:numColumns="3"
                 android:layout_height="100dp"
                 android:layout_below="@+id/tv_zuopin"
                 android:layout_marginLeft="20dp"
                 />

          
         </RelativeLayout>

         
         
         <RelativeLayout
             android:id="@+id/state5"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/state4"
             android:layout_marginTop="10dp"
             android:background="#DDDDDD"
             android:orientation="horizontal" >

             <TextView
                 android:id="@+id/tv_jianjie"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                 android:layout_marginTop="16dp"
                 android:text="简介" />

             <TextView
                 android:id="@+id/tv_neirong"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignLeft="@+id/tv_jianjie"
                 android:layout_below="@+id/tv_jianjie"
                 android:layout_marginRight="20dp"
                 android:layout_marginTop="15dp"
                 android:text="用最专业的技术服务每一位顾客,感谢一直有你的陪伴和支持" />
             
         </RelativeLayout>
    </RelativeLayout>

</ScrollView>
