<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


 <!--    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" /> -->
       <com.loopj.android.image.SmartImageView 
          android:id="@+id/imageView1"
          android:layout_width="60sp"
          android:layout_height="60sp"
        android:src="@drawable/ic_launcher"
          
          
          />

    <TextView
        android:id="@+id/b_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="小娇娇" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/b_name"
        android:text="美吗" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:text="美容师" />

    <TextView
        android:id="@+id/belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="14dp"
        android:text="阿海美发设计" />

    <com.roamer.ui.view.SquareCenterImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/ic_launcher" />
       

    <TextView
        android:id="@+id/commentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_margin="4sp"
        android:text="0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/commentCount"
        android:src="@drawable/blog_list_icon_good" />

    <TextView
        android:id="@+id/pariseCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_margin="4sp"
        android:text="3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_below="@+id/belong"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/belong"
        android:src="@drawable/xiaoxi2" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView4"
        android:layout_alignRight="@+id/position"
        android:text="40分钟前" />
    
</RelativeLayout>
