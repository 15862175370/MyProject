<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <!-- 标题 -->

    <RelativeLayout
        android:id="@+id/bjmgf_sdk_dock_pay_center_title_LayoutId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1bb0f8" >

         <RelativeLayout
            android:id="@+id/bjmgf_sdk_dock_pay_center_closeLlId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/bjmgf_sdk_closeAboutBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/bjmgf_sdk_back" />
        </RelativeLayout>
        <TextView
            android:id="@+id/bjmgf_sdk_messageTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="回复"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
      
    
    <EditText 
        android:layout_marginTop="20dp"
        android:id="@+id/et_comment"
        android:layout_height="100dp"
        android:background="@drawable/biankuang"
        android:layout_width="match_parent"
        android:hint="请发表您的内容"
        android:maxLines="30"
        android:gravity="top"
        android:padding="10dp"
        android:textSize="12sp"
        />
    
	<View 
	    android:layout_height="0.7dp"
	    android:layout_width="match_parent"
	    android:background="#44000000"
	    />
	<RelativeLayout 
	    android:layout_marginTop="10dp"
	    android:layout_height="40dp"
	    android:layout_width="match_parent"
	    >
	  
	    
	   
	      
	        <ImageView 
	            android:layout_alignParentRight="true"
	            android:id="@+id/comment_fb"
	            android:layout_height="40dp"
	            android:layout_width="80dp"
	            android:background="@drawable/comment_fb"
	            />
	   
	</RelativeLayout>
    
    

</LinearLayout>
