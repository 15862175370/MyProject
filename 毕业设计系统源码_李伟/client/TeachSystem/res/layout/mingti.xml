<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <!-- 标题 -->

    <RelativeLayout
        android:id="@+id/bjmgf_sdk_dock_pay_center_title_LayoutId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1bb0f8" >

         <RelativeLayout
            android:id="@+id/bjmgf_sdk_dock_pay_center_closeLlId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/bjmgf_sdk_closeAboutBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/bjmgf_sdk_back" />
        </RelativeLayout>
        <TextView
            android:id="@+id/bjmgf_sdk_messageTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="命题"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout 
     android:id="@+id/cno_linearlayout"   
      android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView 
         android:id="@+id/cno_textview" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:text="测试题目"/>
        <EditText
            android:layout_marginLeft="10dp" 
            android:id="@+id/question" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:textSize="20dp" 
          android:background="@drawable/biankuang" 
            />
     
    </LinearLayout>
      
    
     <LinearLayout 
     android:id="@+id/cname_linearlayout"   
      android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
    
        >
        <TextView 
         android:id="@+id/cname_textview" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:text="选 项   A"/>
        <EditText 
              android:layout_marginLeft="10dp" 
            android:id="@+id/question_a" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:textSize="20dp" 
          android:background="@drawable/biankuang" 
            />
     
    </LinearLayout>
      

      <LinearLayout 
     android:id="@+id/ctime_linearlayout"   
      android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
    
        >
        <TextView 
         android:id="@+id/ctime_textview" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:text="选 项   B"/>
        <EditText 
              android:layout_marginLeft="10dp" 
            android:id="@+id/question_b" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:textSize="20dp" 
          android:background="@drawable/biankuang" 
            />
     
    </LinearLayout>
      
      
       <LinearLayout 
     android:id="@+id/cadress_linearlayout"   
      android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
      
        >
        <TextView 
         android:id="@+id/cadress_textview" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:text="正确选项"/>
        <EditText
              android:layout_marginLeft="10dp"  
            android:id="@+id/zhengque" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
          android:textSize="20dp" 
          android:background="@drawable/biankuang" 
            />
     
    </LinearLayout>
      
      
        <RelativeLayout 
           android:layout_height="wrap_content" 
             android:layout_width="match_parent" 
             android:layout_marginTop="30dp"
            >
            <Button 
             android:id="@+id/ok"  
             android:layout_height="40dp" 
               android:layout_width="100dp" 
               android:background="#1bb0f8"
               android:textSize="20dp"
               android:text="确认"
               android:layout_centerInParent="true"
                />
            
            
        </RelativeLayout>
        
    

</LinearLayout>
